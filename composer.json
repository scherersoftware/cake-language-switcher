{
    "name": "scherersoftware/cake-language-switcher",
    "description": "LanguageSwitcher plugin for CakePHP",
    "license": "MIT",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "^4.0.0-RC1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11",
        "scherersoftware/coding-standard": "^4.0-dev"
    },
    "autoload": {
        "psr-4": {
            "LanguageSwitcher\\": "src"
        }
    },
    "scripts": {
        "check": [
            "@php-check",
            "@phpstan"
        ],
        "php-check": "vendor/bin/phpcs -p --standard=vendor/scherersoftware/coding-standard/scherersoftware ./src",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 7 ./src"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
